<script>
		function doPermission(){
			if(localStorage.getItem('permission') != 1 ){
				$('#admin').remove();
				$('#edicao').remove();
			}
		}

		function doAddAnswer() {
				if($("input:radio[name='resposta1']:checked").attr('flag') == 's' && $("input:radio[name='resposta2']:checked").attr('flag') == 's' ){
				//getAnswer
				var firstQuestionAnswer =  $("input:radio[name='resposta1']:checked").val();
				var secondQuestionAnswer =  $("input:radio[name='resposta2']:checked").val();
				var idUser =  $('#user').val();

				var data = {
				firstQuestionAnswer: firstQuestionAnswer,
				secondQuestionAnswer: secondQuestionAnswer,
				idUser: idUser
				};

				$.ajax({
				method: "POST",
				url: "/answer",
				data: JSON.stringify(data),
				contentType: "application/json"
				})
				.done((response) => {
				window.location.href='/courses';
				})
				.fail((jhx, textStatus, msg) => {
				console.log(jhx);
				});      
				}else{
					alert('Resposta errada, por favor tente novamente :(');
					return false;

				}
			}



	</script>




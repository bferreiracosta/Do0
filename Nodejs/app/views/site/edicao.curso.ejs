	<div class="page-header text-center">
			<h1><span class="fa fa-anchor"></span> Profile Page</h1>
			<a href="/logout" class="btn btn-default btn-sm">Logout</a>
			<a href="/admin" class="btn btn-default btn-sm">Admin</a>
			<a href="/edicao" class="btn btn-default btn-sm">Edicao Curso</a>
		</div>

    <div class="container">
        <div><h1>Lista de Aulas</h1></div>
       
        <table class="table">
            <tbody>
				<% for(var chave in curso){  %>
                <tr>
                <th colspan="3" scope="row" id="table"><%= curso[chave].lessonName %> </th>
                <td colspan="3"><button type="submit" class="btn btn-primary aula">Editar</button>
                <button type="submit" class="btn btn-primary delete">Deletar</button></td>
				</tr>
				<% } %>
				
            </tbody>
        </table>
		
    </div>
    
    <!-- JS Scripts -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<script>
			$(document).ready(function(){
		if(localStorage.getItem('permission') != 1){
			$('body').html('<h6>NÃ£o Autorizado </h6>');
			window.location.href ='/profile';
		}
	})

$(function(){
	
				
		$(".aula").on("click", function(){
			var lessonName = ($( this ).parents('td').siblings('th')[0].innerHTML)
			window.location.href = "/update/" + lessonName;
		});
	
	
	});
	$(function(){
	
				
	$(".delete").on("click", function(){
		var lessonName = ($( this ).parents('td').siblings('th')[0].innerHTML)
		window.location.href = "/delete/" + lessonName;
	});


});
	

	</script>

